LIBFT_DIR = libft/

NAME = verifier

MAIN = _test/verifier.c

all: $(NAME)

$(NAME):
	@ gcc -Wall -Wextra -Werror \
		$(MAIN) \
		-I ./ -I read_input/ -I datatypes/ -I $(LIBFT_DIR) \
		\
		read_options.c \
		\
		read_input/ft_atoi_strict.c \
		read_input/tokenize_turn.c \
		read_input/tokenize.c \
		read_input/get_next_token.c \
		read_input/read_ants.c \
		read_input/read_rooms.c \
		read_input/read_links.c \
		read_input/read_turns.c \
		read_input/read_input_verifier.c \
		\
		error.c \
		\
		datatypes/list.c \
		datatypes/link.c \
		datatypes/room.c \
		datatypes/set.c \
		\
		$(LIBFT_DIR)libft.a \
		-o $(NAME)
